<%= render 'layouts/headadmin'%>
<div class="producto-index">

  <div class="row">
    <h1>Lista de Productos</h1>
  <%= link_to 'Agregar producto', new_product_path , class: 'button' %>
  
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Imagen</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.description %></td>
          <td><%= product.image_url %></td>
          <td><%= link_to 'Editar', edit_product_path(product) %></td>
          <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Â¿Esta seguro de eliminar?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>



